<Window x:Class="OPTEL.UI.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gantt="clr-namespace:Braincase.GanttChart;assembly=GanttChart"
        xmlns:localization="clr-namespace:EasyLocalization.Localization;assembly=EasyLocalization"
        xmlns:local="clr-namespace:OPTEL.UI.Desktop.Views"
        mc:Ignorable="d"
        Title="Optel - Username" 
        Width="800"
        Height="600" 
        Icon="{StaticResource ApplicationIconBitmapImage}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Menu Height="25" Grid.Column="0" Grid.Row="0" Background="Transparent">
            <MenuItem Header="{localization:Localize Key=Menu.Data}">
                <MenuItem Header="{localization:Localize Key=Menu.Data.Extruder.Calibration.Changes}" Command="{Binding OpenExtruderCalibrationsWindowCommand}"></MenuItem>
                <MenuItem Header="{localization:Localize Key=Menu.Data.Extruder.Nozzle.Changes}" Command="{Binding OpenExtruderNozzlesWindowCommand}"></MenuItem>
                <MenuItem Header="{localization:Localize Key=Menu.Data.Extruder.CoolingLip.Changes}" Command="{Binding OpenExtruderCoolingLipsWindowCommand}"></MenuItem>
                <MenuItem Header="{localization:Localize Key=Menu.Data.Extruder.Recipe.Changes}" Command="{Binding OpenExtruderRecipesWindowCommand}"></MenuItem>
                <MenuItem Header="{localization:Localize Key=Menu.Data.Extruders}" Command="{Binding OpenExtrudersWindowCommand}"></MenuItem>
                <MenuItem Header="{localization:Localize Key=Menu.Data.Film.Recipes}" Command="{Binding OpenFilmRecipesWindowCommand}"></MenuItem>
                <MenuItem Header="{localization:Localize Key=Menu.Data.Film.Articles}" Command="{Binding OpenFilmTypesWindowCommand}"></MenuItem>
                <MenuItem Header="{localization:Localize Key=Menu.Data.Orders}" Command="{Binding OpenOrdersWindowCommand}"></MenuItem>
                <MenuItem Header="{localization:Localize Key=Menu.Data.Customers}" Command="{Binding OpenCustomersWindowCommand}"></MenuItem>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Generate excel file data template"></MenuItem>
                <MenuItem Header="Import data from excel file" Command="{Binding OpenImportExcelWindowCommand}"/>
                <MenuItem Header="Options">
                    <MenuItem Header="Language" x:Name="languageMenuItem"/>
                </MenuItem>
            </MenuItem>
        </Menu>
        <WindowsFormsHost Grid.Column="0" Grid.Row="1">
            <gantt:Chart x:Name="GanttChart"/>
        </WindowsFormsHost>
    </Grid>
</Window>
